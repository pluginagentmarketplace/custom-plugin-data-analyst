{
  "version": "1.0.0",
  "hooks": [
    {
      "id": "onPluginLoad",
      "name": "Plugin Initialization",
      "description": "Initialize plugin when first loaded",
      "trigger": "plugin-load",
      "enabled": true,
      "actions": [
        {
          "type": "load-user-context",
          "description": "Load user experience level and previous progress"
        },
        {
          "type": "initialize-learning-path",
          "description": "Initialize personalized learning path"
        },
        {
          "type": "check-updates",
          "description": "Check for plugin updates"
        }
      ]
    },
    {
      "id": "onLearnCommand",
      "name": "Learn Command Handler",
      "trigger": "command:learn",
      "enabled": true,
      "actions": [
        {
          "type": "show-level-selector",
          "description": "Show beginner/intermediate/advanced options"
        },
        {
          "type": "create-learning-path",
          "description": "Generate personalized learning roadmap"
        },
        {
          "type": "load-agent",
          "description": "Activate relevant specialist agents"
        },
        {
          "type": "save-preferences",
          "description": "Save user learning preferences"
        }
      ]
    },
    {
      "id": "onExploreCommand",
      "name": "Explore Command Handler",
      "trigger": "command:explore",
      "enabled": true,
      "actions": [
        {
          "type": "list-agents",
          "description": "Display all 7 specialist agents"
        },
        {
          "type": "show-expertise-areas",
          "description": "Show each agent's expertise"
        },
        {
          "type": "enable-agent-selection",
          "description": "Allow user to select agent"
        }
      ]
    },
    {
      "id": "onProgressCommand",
      "name": "Progress Tracking Command",
      "trigger": "command:progress",
      "enabled": true,
      "actions": [
        {
          "type": "calculate-progress",
          "description": "Calculate overall learning progress"
        },
        {
          "type": "generate-report",
          "description": "Generate progress summary report"
        },
        {
          "type": "identify-gaps",
          "description": "Identify skill gaps"
        },
        {
          "type": "recommend-next",
          "description": "Recommend next learning step"
        },
        {
          "type": "save-checkpoint",
          "description": "Save progress checkpoint"
        }
      ]
    },
    {
      "id": "onProjectsCommand",
      "name": "Projects Command Handler",
      "trigger": "command:projects",
      "enabled": true,
      "actions": [
        {
          "type": "list-projects",
          "description": "Display all available projects"
        },
        {
          "type": "filter-by-level",
          "description": "Filter projects by skill level"
        },
        {
          "type": "show-details",
          "description": "Show detailed project information"
        },
        {
          "type": "enable-selection",
          "description": "Allow project selection"
        }
      ]
    },
    {
      "id": "onSkillAccess",
      "name": "Skill Access Handler",
      "trigger": "skill-access",
      "enabled": true,
      "actions": [
        {
          "type": "load-skill-content",
          "description": "Load requested SKILL.md content"
        },
        {
          "type": "log-skill-view",
          "description": "Log skill viewing for progress"
        },
        {
          "type": "suggest-related",
          "description": "Suggest related skills"
        },
        {
          "type": "show-resources",
          "description": "Display learning resources"
        }
      ]
    },
    {
      "id": "onAgentInvoke",
      "name": "Agent Invocation Handler",
      "trigger": "agent-invoke",
      "enabled": true,
      "actions": [
        {
          "type": "load-expertise",
          "description": "Load agent expertise context"
        },
        {
          "type": "activate-skills",
          "description": "Activate relevant skills for agent"
        },
        {
          "type": "provide-guidance",
          "description": "Provide specialized guidance"
        }
      ]
    },
    {
      "id": "onDailyEngagement",
      "name": "Daily Engagement Hook",
      "trigger": "daily-checkin",
      "enabled": true,
      "actions": [
        {
          "type": "show-summary",
          "description": "Show weekly progress summary"
        },
        {
          "type": "motivate-user",
          "description": "Provide motivational message"
        },
        {
          "type": "suggest-daily-focus",
          "description": "Suggest today's learning focus"
        },
        {
          "type": "offer-quick-lesson",
          "description": "Offer 15-minute quick lesson"
        }
      ]
    },
    {
      "id": "onWeeklyReview",
      "name": "Weekly Learning Review",
      "trigger": "weekly-review",
      "enabled": true,
      "actions": [
        {
          "type": "generate-weekly-report",
          "description": "Create weekly progress report"
        },
        {
          "type": "identify-trends",
          "description": "Identify learning trends"
        },
        {
          "type": "adjust-recommendations",
          "description": "Adjust recommendations if needed"
        },
        {
          "type": "celebrate-milestones",
          "description": "Celebrate achievements"
        },
        {
          "type": "plan-next-week",
          "description": "Plan next week's focus"
        }
      ]
    },
    {
      "id": "onProjectCompletion",
      "name": "Project Completion Handler",
      "trigger": "project-complete",
      "enabled": true,
      "actions": [
        {
          "type": "validate-project",
          "description": "Validate project completion"
        },
        {
          "type": "award-badge",
          "description": "Award completion badge"
        },
        {
          "type": "log-portfolio",
          "description": "Log to portfolio"
        },
        {
          "type": "suggest-next-project",
          "description": "Suggest next project"
        },
        {
          "type": "update-progress",
          "description": "Update overall progress"
        }
      ]
    }
  ],
  "configuration": {
    "enableProgressTracking": true,
    "enableDailyReminders": true,
    "enableWeeklyReview": true,
    "enableProjectTracking": true,
    "enableSkillBadges": true,
    "autoSaveProgress": true,
    "autoSaveInterval": 300000,
    "enableCareerGuidance": true,
    "enableCommunityFeatures": true,
    "analyticsEnabled": true
  },
  "automation": {
    "progressSaving": {
      "enabled": true,
      "frequency": "on-change",
      "backup": "daily"
    },
    "recommendations": {
      "enabled": true,
      "frequency": "weekly",
      "personalized": true,
      "basedOnProgress": true
    },
    "notifications": {
      "enabled": true,
      "frequency": "daily",
      "types": ["milestone", "reminder", "suggestion"]
    },
    "reporting": {
      "enabled": true,
      "frequency": "weekly",
      "format": "detailed",
      "includes": ["progress", "recommendations", "insights"]
    }
  },
  "integrations": {
    "calendar": {
      "enabled": true,
      "syncLearningEvents": true,
      "addMilestones": true
    },
    "portfolio": {
      "enabled": true,
      "trackProjects": true,
      "exportPortfolio": true
    },
    "career": {
      "enabled": true,
      "jobMatching": true,
      "salaryTracking": true
    }
  },
  "learningPaths": {
    "beginner": {
      "duration": "6 months",
      "skills": ["excel-fundamentals", "google-sheets", "sql-basics", "descriptive-statistics", "power-bi"],
      "projects": [1, 2, 3, 4]
    },
    "intermediate": {
      "duration": "12 months",
      "skills": ["sql-advanced", "database-design", "inferential-statistics", "python-basics", "pandas-numpy", "tableau", "regression-analysis"],
      "projects": [5, 6, 7, 8]
    },
    "advanced": {
      "duration": "18+ months",
      "skills": ["probability", "r-programming", "predictive-modeling", "data-mining"],
      "projects": [9, 10, 11, 12]
    }
  }
}
